@model IEnumerable<ProductDto>

@{
    ViewData["Title"] = "ProductIndex";
}

<h1>Ürünler</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Ürün Ekle</a>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Adı</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Düzenle</a>
                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">Detaylar</a>
                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>